{
  "name": "akademie-ruhr/cookie-hint",
  "type": "typo3-cms-extension",
  "description": "Fork of and drop-in successor to mindshape_cookie_hint. Shows a visible hint on the website that cookies are used - according to the European laws. Easy to install, fully customizable and the hint will permanently be hidden after accepting.",
  "homepage": "https://akademieruhr.de",
  "license": [
    "GPL-2.0-or-later"
  ],
  "require": {
    "php": ">=7.4.0",
    "typo3/cms-core": "^10.4 || ^11.5"
  },
  "autoload": {
    "psr-4": {
      "AkademieRuhr\\CookieHint\\": "Classes"
    }
  },
  "require-dev": {
    "typo3/coding-standards": "^0.4.0"
  },
  "typo3/cms": {
    "app-dir": ".build",
    "extension-key": "akademie_ruhr_cookie_hint",
    "web-dir": ".build/web"
  },
  "support": {
    "issues": "https://github.com/pascalebeier/akademie_ruhr_cookie_hint/issues",
    "source": "https://github.com/pascalebeier/akademie_ruhr_cookie_hint/"
  }
}
